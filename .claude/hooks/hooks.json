{
  "hooks": [
    {
      "event": "SessionStart",
      "command": {
        "command": "bash",
        "args": [
          "~/.claude/hooks/session-start-welcome.sh"
        ],
        "timeout": 10
      }
    },
    {
      "event": "UserPromptSubmit",
      "command": {
        "command": "bash",
        "args": [
          "~/.claude/hooks/context-warning.sh"
        ],
        "timeout": 5
      }
    },
    {
      "event": "UserPromptSubmit",
      "command": {
        "command": "bash",
        "args": [
          "~/.claude/hooks/periodic-reminder.sh"
        ],
        "timeout": 5
      }
    }
  ]
}
