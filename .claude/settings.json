{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(ralph:*)",
      "Bash(mmc:*)",
      "Read",
      "Write",
      "Edit"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/quality-gates.sh",
            "timeout": 300
          },
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/checkpoint-auto-save.sh",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/quality-gates.sh",
            "timeout": 300
          },
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/checkpoint-auto-save.sh",
            "timeout": 60
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/git-safety-guard.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/skill-validator.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/sentry-report.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/context-warning.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/periodic-reminder.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/prompt-analyzer.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/session-start-ledger.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/pre-compact-handoff.sh",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
